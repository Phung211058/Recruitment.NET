@model IEnumerable<Job22.Models.Application>

@{
    ViewData["Title"] = "Job You applicated";
}

<h1>Job You applicated</h1>

@* <p>
    <a asp-action="Create">Create New</a>
</p> *@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                Job Title 
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@item.Image" alt="Job Image" style="width: 100px; height: auto;">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobList.Title) 
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="delete" asp-route-id="@item.Id">delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
